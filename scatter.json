{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "150",
  "height": "150",
  "title": "Secondary Retention Rate",
  "data": {
    "url": "https://raw.githubusercontent.com/b-onbon/FIT3179/main/Data/Retention_Rate.csv"
  },
  "params": [
    {
        "name": "select_year",
        "bind": {
            "input": "select",
            "options": ["2021", "2022"],
            "labels": ["2021", "2022"],
        "name": "Select Year"
        }
    } 
],
"transform": [
    {
      "filter": {"field": "Gender", "equal": "Male"}
    },
    {
      "calculate": "datum.Percentage",
      "as": "diagonal" 
  },
  {
    "filter": {"field": "Gender", "equal": "Female"}
  },
  {
    "calculate": "datum.Percentage",
    "as": "end" 
}
],
"layer": [
    {
      "mark": {"type": "point", "filled": true},
      "transform": [
        {"filter": {"field": "Gender", "equal": "Male"}}
      ]
    },
    {
        "mark": {"type": "point", "filled": true},
        "transform": [
          {"filter": {"field": "Gender", "equal": "Female"}}
        ]
      },
      {
        "mark": {"type": "rule", "color": "black"},
        "transform": [
          {"filter": {"field": "Gender", "equal": "Male"}}
        ],
        "encoding": {
          "x": {"field": "diagonal", "type": "quantitative"},
          "y": {"field": "end", "type": "quantitative"}
        }
      }
    ],
  "mark": "point",
  "encoding": {
    "x": {
      "field": "Retention",
      "type": "quantitative",
      "title": "Males %",
      "scale": {"domain": [50, 100]}
    },
    "y": {
      "field": "Retention",
      "type": "quantitative",
      "title": "Females %",
      "scale": {"domain": [50, 100]}
    },
    "color": {
      "field": "Gender",
      "type": "nominal",
      "scale": {"range": ["#9370db", "#87a96b"]}
    }
    }
  }
